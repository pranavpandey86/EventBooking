# Environment variables for Azure production
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:80

# Azure Container Registry (Update with your values)
ACR_NAME=ticketbookingacr
ACR_LOGIN_SERVER=${ACR_NAME}.azurecr.io
AZURE_RESOURCE_GROUP=rg-ticketbooking
AZURE_CONTAINER_APP_ENV=cae-ticketbooking

# Database Configuration (Azure SQL or Container)
SQL_SERVER_HOST=sqlserver-prod
SQL_SERVER_PORT=1433
SQL_SERVER_DATABASE=EventManagementDB
SQL_SERVER_USER=sa
SQL_SERVER_PASSWORD=YourStrong!Passw0rd2024!

# Connection Strings for Production
ConnectionStrings__DefaultConnection=Server=${SQL_SERVER_HOST},${SQL_SERVER_PORT};Database=${SQL_SERVER_DATABASE};User Id=${SQL_SERVER_USER};Password=${SQL_SERVER_PASSWORD};TrustServerCertificate=true;Encrypt=true;

# Logging Configuration for Production
ASPNETCORE_LOGGING__LOGLEVEL__DEFAULT=Warning
ASPNETCORE_LOGGING__LOGLEVEL__MICROSOFT=Error
ASPNETCORE_LOGGING__LOGLEVEL__MICROSOFT_ENTITYFRAMEWORKCORE=Warning

# Security
ASPNETCORE_FORWARDEDHEADERS_ENABLED=true
ASPNETCORE_HTTPSREDIRECTION_HTTPSPORT=443

# CORS Configuration (Update with your domain)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
