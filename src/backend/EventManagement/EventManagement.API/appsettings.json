{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=.;Initial Catalog=EventManagementDB;Integrated Security=true;TrustServerCertificate=true;"
  },
  "EventSearch": {
    "BaseUrl": "http://localhost:8081"
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "ClientId": "eventmanagement-api",
    "MessageTimeoutMs": 5000,
    "RequestTimeoutMs": 30000,
    "CompressionType": "snappy",
    "RetryBackoffMs": 100,
    "MessageMaxBytes": 1000000,
    "Topics": {
      "EventCreated": "event-created",
      "EventUpdated": "event-updated",
      "EventDeleted": "event-deleted"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "EventManagement.API.Services.KafkaEventPublisher": "Debug",
      "EventManagement.API.Services.EventDtoService": "Debug"
    }
  },
  "AllowedHosts": "*"
}
